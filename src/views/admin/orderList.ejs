<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order List</title>
  <link rel="stylesheet" href="/admin/styles/admin.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
   <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
    <%- include('../components/Navbar') %>
  <% } %>

  <h1>Order List</h1>

  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Order ID</th>
        <th>Product Name(s)</th>
        <th>Quantity</th>
        <th>Total Amount</th>
        <th>Status</th>
        <th>Delivery Address</th>
        <th>Ordered By</th> <!-- NEW COLUMN -->
      </tr>
    </thead>
    <tbody>
      <% orders.forEach((order, idx) => { %>
        <tr>
          <td><%= idx + 1 %></td>
          <td><%= order._id || order.id %></td>
          <td>
            <% order.items.forEach(item => { %>
              <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 4px;">
                <% if (item.product && item.product.images && item.product.images[0]) { %>
                  <img src="<%= item.product.images[0] %>" alt="<%= item.product.name || 'Product' %>" style="width:32px;height:32px;object-fit:cover;border-radius:4px;">
                <% } %>
                <span>
                  <%= (item.product && item.product.name)
                        ? item.product.name
                        : (typeof item.product === 'string' ? item.product : 'No Name') %>
                </span>
              </div>
            <% }) %>
          </td>
          <td>
            <% order.items.forEach(item => { %>
              <div>
                <%= item.quantity %>
              </div>
            <% }) %>
          </td>
          <td>
            <strong>â‚¹<%= (order.totalAmount || order.total || 0).toFixed(2) %></strong>
          </td>
          <td>
            <%= order.status %>
          </td>
          <td>
            <% if (order.address) { %>
              <div>
                <%= order.address.name %>, <%= order.address.phone %><br>
                <%= order.address.street %>, <%= order.address.city %>, <%= order.address.state %><br>
                Pin: <%= order.address.pincode %>, <%= order.address.country %>
              </div>
            <% } else { %>
              <span style="color:#f44336;">No Address</span>
            <% } %>
          </td>
          <td>
            <% if (order.user) { %>
              <%= order.user.name ? order.user.name : '' %>
              <br>
              <small><%= order.user.email ? order.user.email : '' %></small>
            <% } else { %>
              <span style="color:#f44336;">No User</span>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <%- include('../components/Footer') %>

  <style>
    /* Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Global Styles */
    body {
      font-family: 'Inter', sans-serif;
      background-color: #0E0E0E;
      color: #FFFFFF;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    /* Navbar */
    .navbar {
      background-color: #141414;
      color: #FFFFFF;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar-brand a {
      font-size: 1.5rem;
      font-weight: 700;
      color: #DC2040;
      text-decoration: none;
    }

    .navbar-links {
      list-style: none;
      display: flex;
      gap: 1.5rem;
    }

    .navbar-links a {
      color: #FFFFFF;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .navbar-links a:hover {
      color: #DC2040;
    }

    /* Sidebar */
    .sidebar {
      width: 220px;
      background-color: #1C1C1C;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 2rem;
      overflow-y: auto;
    }
.icon-button {
  background: none;
  border: none;
  cursor: pointer;
}

.icon-green {
  font-size: 1.5em;
  color: #4caf50;
}

.icon-red {
  font-size: 1.5em;
  color: #f44336;
}

.icon-grey {
  font-size: 1.5em;
  color: #888;
}

    .sidebar ul {
      list-style: none;
      padding-left: 0;
    }

    .sidebar li {
      margin-bottom: 1rem;
    }

    .sidebar a {
      display: block;
      padding: 0.75rem 1.25rem;
      text-decoration: none;
      color: #FFFFFF;
      font-weight: 500;
      border-radius: 5px;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .sidebar a:hover {
      background-color: #2E2E2E;
      color: #DC2040;
    }

    /* Main Content */
    h1 {
      margin-left: 240px;
      margin-top: 2rem;
      font-size: 2rem;
      padding: 0 1rem;
      color: #FFFFFF;
    }

    table {
      margin-left: 240px;
      margin-top: 1rem;
      margin-bottom: 5rem;
      width: calc(100% - 240px);
      border-collapse: collapse;
      background-color: #1C1C1C;
    }

    table th, table td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid #444;
    }

    table th {
      background-color: #DC2040;
      color: #FFFFFF;
    }

    table td {
      background-color: #1C1C1C;
    }

    table tr:nth-child(even) td {
      background-color: #2E2E2E;
    }

    table tr:hover td {
      background-color: #3A3A3A;
    }

    .btn {
      padding: 0.5rem 1rem;
      text-decoration: none;
      border-radius: 5px;
      font-size: 0.9rem;
      font-weight: 600;
      display: inline-block;
      text-align: center;
      transition: background-color 0.3s ease;
    }

    .btn-info {
      background-color: #DC2040;
      color: #FFFFFF;
    }

    .btn-warning {
      background-color: #DC2040;
      color: #FFFFFF;
    }

    .btn-danger {
      background-color: #f44336;
      color: #FFFFFF;
    }

    .btn:hover {
      background-color: #B71E35;
    }

    /* Footer */
    .footer {
      background-color: #141414;
      color: #FFFFFF;
      text-align: center;
      padding: 1rem;
      margin-top: auto;
      width: 100%;
      position: fixed;
      bottom: 0;
      left: 0;
      z-index: 100;
    }

    .footer span {
      color: #DC2040;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .sidebar {
        width: 100%;
        height: auto;
        position: relative;
      }

      h1, table {
        margin-left: 0;
        width: 100%;
      }

      table th, table td {
        font-size: 0.9rem;
      }
    }
  </style>
</body>
</html>