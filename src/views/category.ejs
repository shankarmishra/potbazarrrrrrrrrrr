      .category-title {
        font-size: 1.8rem;
      }

      .filter-section {
        flex-direction: column;
        align-items: stretch;
      }

      .search-bar-category {
        max-width: 100%;
      }

      #categoryProductGrid {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 1rem;
      }

      .product-slider {
        height: 220px;
      }

      .product-info {
        padding: 1rem;
      }
    }

    @media (max-width: 480px) {
      .category-title {
        font-size: 1.5rem;
      }

      .product-actions {
        flex-direction: column;
      }

      .product-slider {
        height: 180px;
      }
    }

    /* Product Navigation Improvements */
    .product-nav {
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      transform: translateY(-50%);
      display: flex;
      justify-content: space-between;
      padding: 0 1rem;
      pointer-events: none;
    }

    .product-nav button {
      background: rgba(255, 255, 255, 0.8);
      border: none;
      width: 35px;
      height: 35px;
      border-radius: 50%;
      cursor: pointer;
      pointer-events: auto;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
    }

    .product-nav button:hover {
      background: white;
      transform: scale(1.1);
    }
  </style>
