      margin-bottom: 0.5rem;
    }

    .category-description {
      color: var(--secondary-text-color);
      font-size: 1.1rem;
      max-width: 600px;
      margin: 0 auto;
    }

    .filter-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .search-bar-category {
      flex: 1;
      max-width: 300px;
      margin: 0;
    }

    .sort-select {
      padding: 0.6rem 1rem;
      border-radius: 8px;
      border: 1.5px solid #e2e8f0;
      background: #f7fafc;
      color: var(--text-color);
      font-size: 0.9rem;
      cursor: pointer;
      transition: all 0.3s;
    }

    .sort-select:hover {
      border-color: var(--primary-color);
    }

    #categoryProductGrid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 2rem;
      padding: 1rem 0;
    }

    .product-item {
      background: var(--card-bg);
      border-radius: 12px;
      overflow: hidden;
      transition: transform 0.3s, box-shadow 0.3s;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
      position: relative;
    }

    .product-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    .product-slider {
      position: relative;
      height: 280px;
      overflow: hidden;
    }

    .product-slider img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .product-info {
      padding: 1.5rem;
    }

    .product-category {
      color: var(--secondary-text-color);
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
    }

    .product-name {
      font-size: 1.2rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--text-color);
    }

    .product-price {
      font-size: 1.1rem;
      color: var(--primary-color);
      font-weight: 600;
      margin-bottom: 1rem;
    }

    .product-stock {
      display: inline-block;
      padding: 0.4rem 0.8rem;
      border-radius: 20px;
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .stock-green {
      background: #e8f5e9;
      color: var(--primary-color);
    }

    .stock-red {
      background: #fee2e2;
      color: #e53e3e;
    }

    .product-actions {
      display: flex;
      gap: 1rem;
      margin-top: 1rem;
    }

    .product-actions a,
    .add-to-cart-btn {
      flex: 1;
      padding: 0.8rem;
      text-align: center;
      border-radius: 8px;
      transition: all 0.3s;
      font-weight: 500;
    }

    .product-actions a {
      background: #f3f4f6;
      color: var(--text-color);
      text-decoration: none;
    }

    .add-to-cart-btn {
      background: var(--primary-color);
      color: white;
      border: none;
      cursor: pointer;
    }

    .add-to-cart-btn:hover {
      background: #276749;
    }

    .add-to-cart-btn:disabled {
      background: #e2e8f0;
      cursor: not-allowed;
    }

    /* Mobile Responsiveness */
