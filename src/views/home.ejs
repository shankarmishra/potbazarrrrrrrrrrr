          headers: {
            'Content-Type': 'application/json',
          },
        });
        if (!res.ok) {
          throw new Error(`HTTP error! Status: ${res.status}`);
        }
        const data = await res.json();
        return !!data.loggedIn;
      } catch (error) {
        console.error('Error checking login status:', error);
        return false;
      }
