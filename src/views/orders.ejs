      color: var(--text-color);
      margin-bottom: 0.5rem;
    }

    .order-card p {
      font-size: 1rem;
      color: var(--secondary-text-color);
      margin-bottom: 0.5rem;
    }

    .order-items {
      margin-top: 1rem;
      display: grid;
      gap: 1rem;
    }

